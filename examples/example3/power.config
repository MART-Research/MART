# Detailed Power Modeling Configuration File

# General Power Parameters
voltage = 1.0                # Supply voltage (Volts)
frequency = 1e9              # Operating frequency (Hz)

# Link Power Parameters
link_capacitance = 1e-12     # Capacitance of the link (Farads)
link_leakage_current = 1e-6  # Leakage current of the link (Amperes)

# Node Power Parameters
node_buffer_capacitance = 1e-12  # Capacitance of the node buffers (Farads)
node_crossbar_capacitance = 2e-12 # Capacitance of the node crossbar (Farads)
node_leakage_current = 2e-6      # Leakage current of the node (Amperes)

# Activity Factors
buffer_read_write_factor = 0.6 # Fraction of time buffers are accessed
crossbar_traversal_factor = 0.8 # Fraction of time crossbars are traversed
link_activity_factor = 0.5      # Fraction of time links are active
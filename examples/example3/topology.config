# Configuration file for the Dragonfly network simulation

topology=dragonfly
num_iterations = 2  # Number of algorithms to be simulated on same flows
percentage_of_faulty_links = 0.0
# Mode of operation
power_model_mode = detailed  

num_groups = 4      # Number of groups  
routers_per_group = 2 # Routers per group  
nodes_per_router = 2 # Nodes per router  
global_links= 1 # Number of global links  

# Virtual Channels (VCs)
num_vcs = 4                  
vc_operation_mode = round_robin  # Options: custom, round_robin  

# Routing Algorithm for each VC (only used if vc_operation_mode = custom)
vc_routing_algorithms_1 = destination_tag, destination_tag, minimal_or, minimal_or
vc_routing_algorithms_2 = minimal_or, minimal_or, destination_tag, minimal_or


# Routing Algorithm for the entire network (only used if vc_operation_mode = round_robin)
routing_algorithm_1 = minimal_or 
routing_algorithm_2 = destination_tag
